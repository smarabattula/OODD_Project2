<h1>Online Shopping System</h1>
<% if current_user %>
  Logged in as <%= current_user.name %>.<br>
  <%= link_to "Edit profile", edit_user_path(current_user)%><br>
  <%= link_to "View all Books", books_path%>
  <% if current_user.is_admin?%>
    <%= link_to "View All Users", users_path%>
  <%else%>
      <%= button_to "Delete Account", user_path(current_user), method: :delete, data: { confirm: 'Are you sure?' }%><br>
  <%end%>
  <%= link_to "View Reviews", reviews_path%>|
  <%= link_to "View Transactions", show_transactions_path%><br>
  <%= link_to "Log Out", logout_path %>

<% else %>
  <%= link_to "Sign Up", signup_path %> or
  <%= link_to "Log In", login_path %>
<% end %>
