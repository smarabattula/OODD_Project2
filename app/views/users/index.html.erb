<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>

<%else%>
<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<table cellspacing=20 >
  <thead>
    <tr>
      <th>Account User Name</th>
      <th>Name</th>
      <th>Email</th>
      <th>Address </th>
      <th>Credit card number </th>
      <th>Phone number </th>
      <th colspan="5"></th>
    </tr>
  </thead>

    <% @users.each do |user|%>
    <%if !user.is_admin? %>
    <tbody>
        <tr>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.credit_card_number %></td>
        <td><%= user.phone_number %></td>
        <%if current_user.is_admin?%>
        <td><%= link_to "Edit this user", edit_user_path(user) %> </td>
        <td><%= button_to "Destroy this user", user, method: :delete%></td>
        <%end%>
        </tr>
    </tbody>
    <%end%>
    <%end%>
</table>

<%= link_to "New user", new_user_path if current_user.is_admin?%>
<%end%>
