<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <td><%= link_to "Show this book", book %></td>
      <td><%= link_to_if book.Stock > 0, 'Purchase this book', new_transaction_path(:book_id => book.id)%></td>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>
<%= link_to "High rating books", high_rating_path %>
